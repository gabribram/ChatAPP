<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="5dp"
        android:layout_height="60dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_send"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="14dp"
            android:layout_marginEnd="14dp"
            android:id="@+id/adduser_imageButton"
            />


        <agency.tango.android.avatarview.views.AvatarView
            android:id="@+id/probile_avatar_image"
            android:layout_marginLeft="23dp"
            android:layout_marginStart="23dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:av_border_color="@android:color/white"
            app:av_border_width="0dp"
            app:av_text_size_percentage="70"
            android:layout_width="45dp" />

        <TextView
            android:text="First name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fisrtname_textView"
            android:layout_alignTop="@+id/probile_avatar_image"
            android:layout_toRightOf="@+id/probile_avatar_image"
            android:layout_toEndOf="@+id/probile_avatar_image"
            android:layout_marginLeft="30dp"
            android:typeface="serif"
            android:textStyle="normal|bold" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lastname_textView"
            tools:text="Last neme"
            android:typeface="serif"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/fisrtname_textView"
            android:layout_alignStart="@+id/fisrtname_textView" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:srcCompat="@drawable/online"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="53dp"
            android:layout_marginBottom="1dp"
            android:layout_marginStart="53dp"
            android:id="@+id/net_status_imageView" />

        <TextView
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/adduser_imageButton"
            android:layout_toStartOf="@+id/adduser_imageButton"
            android:layout_marginRight="0dp"
            android:layout_marginEnd="0dp"
            android:id="@+id/notification_textView"
            android:background="@drawable/alert_textview_badge"
            android:typeface="normal"
            android:textColor="@color/white"
            android:layout_width="30dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="10sp"
            android:visibility="invisible"
            android:layout_height="20dp" />

    </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>